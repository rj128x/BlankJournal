<navigation:Page xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  
                 x:Class="MainSL.Home" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation" 
                 mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480" Title="Домашняя страница" Style="{StaticResource PageStyle}">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Name="pnlFolders" Orientation="Horizontal" Grid.Row="0">
            
        </StackPanel>
        <Grid Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btnNewTBP" Content="Создать Бланк" Click="Button_Click" IsEnabled="{Binding GlobalContext.Single.IsBusy, Converter={StaticResource logicNotConverter}}"/>
                <Button Name="btnNewOBP" Content="Создать ОБП" Click="btnNewOBP_Click"/>
            </StackPanel>
            <Grid Grid.Row="1" VerticalAlignment="Stretch">
                <sdk:DataGrid Name="grdTBPBlanks" AutoGenerateColumns="False" >
                    <sdk:DataGrid.Columns>
                        <sdk:DataGridTemplateColumn Header="№ бланка" SortMemberPath="Number" Width="100" >
                            <sdk:DataGridTemplateColumn.CellTemplate >
                                <DataTemplate>
                                    <ContentControl Content="{Binding Number}" />
                                </DataTemplate>
                            </sdk:DataGridTemplateColumn.CellTemplate>
                        </sdk:DataGridTemplateColumn>
                        <sdk:DataGridTemplateColumn Header="Имя бланка" SortMemberPath="Number" Width="500" >
                            <sdk:DataGridTemplateColumn.CellTemplate >
                                <DataTemplate>
                                    <ContentControl Content="{Binding Name}" />
                                </DataTemplate>
                            </sdk:DataGridTemplateColumn.CellTemplate>
                        </sdk:DataGridTemplateColumn>
                        <sdk:DataGridTemplateColumn Header="Команды" Width="400" >
                            <sdk:DataGridTemplateColumn.CellTemplate >
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Использовать следующий" Name="btnUseNextTBP" Click="btnUseNextTBP_Click"/>
                                        <Button Content="Использовать ОБП" Name="btnUseOBP" Click="btnUseOBP_Click"/>
                                        <Button Content="Просмотр" Name="btnShowPDF" Click="btnShowPDF_Click"/>
                                        <Button Content="Просмотр" Name="btnShowWord" Click="btnShowWord_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </sdk:DataGridTemplateColumn.CellTemplate>
                        </sdk:DataGridTemplateColumn>
                    </sdk:DataGrid.Columns>
                    
                </sdk:DataGrid>
            </Grid>
        </Grid>
        
    </Grid>

</navigation:Page>
